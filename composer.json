{
    "name": "carlalexander/php-runtime",
    "description": "PHP runtime for AWS Lambda",
    "keywords" : [ "aws", "lambda", "php" ],
    "type" : "project",
    "authors" : [
        {
            "name": "Carl Alexander",
            "email": "contact@carlalexander.ca",
            "homepage": "https://carlalexander.ca"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-posix": "*",
        "hollodotme/fast-cgi-client": "^3.0",
        "symfony/process": "^4.0"
    },
    "require-dev": {
        "aws/aws-sdk-php": "^3.121",
        "friendsofphp/php-cs-fixer": "^2.16",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "phpmd/phpmd": "^2.7",
        "phpro/grumphp": "^0.16.2",
        "phpstan/phpstan": "^0.11.19",
        "phpunit/phpunit": "^8.4",
        "sebastian/phpcpd": "^4.1",
        "vlucas/phpdotenv": "^3.6"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Placeholder\\Runtime\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Placeholder\\Runtime\\Tests\\": "tests"
        }
    },
    "prefer-stable": true
}
